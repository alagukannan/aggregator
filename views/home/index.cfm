<cfoutput><h2>Recent Blog posts</h2><div id="sidebar">	<div class="sidebarbox">       <h2>Search Blogs</h2>		<form id="searchForm" action="#event.buildLink(linkto='#event.getCurrentModule()#/search')#">			<p><input type="text" name="q" value="" size="30"/></p>			<p><input type="submit" value="Search" /></p>		</form>	</div></div><div id="content">	<div>		#getMyPlugin(plugin="paging",module=event.getCurrentModule()).renderit( prc.results.foundrows,event.buildLink(linkto='#event.getCurrentModule()#/@page@') )#		<cfloop query="prc.results.qentries">			<div class="blogEntry #iif(currentrow mod 2 eq 0,de('even'),de('odd'))#">				<a href="#link#" title="#title#" rel="#id#">#title#</a>				<div class="description">					<cfif len(description) gt 500>						#left(description,500)#...<a href="#link#" title="#title#">Read More</a> &nbsp;&##187; 					<cfelse>						#description#					</cfif>				</div>				<p class="info">					<strong>Date Published</strong>: #dateFormat(datePublished,'short')# #timeformat(datePublished,"medium")#					<br/>					<strong>Last Updated</strong> : #dateFormat(dateUpdated,'short')# #timeformat(dateUpdated,"medium")#				</p>				<div class="clear">&nbsp;</div>			</div>		</cfloop>		#getMyPlugin(plugin="paging",module=event.getCurrentModule()).renderit( prc.results.foundrows,event.buildLink(linkto='#event.getCurrentModule()#/@page@') )#	</div>	<div class="clear">&nbsp;</div></div></cfoutput>